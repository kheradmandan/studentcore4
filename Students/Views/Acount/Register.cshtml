@model Students.Domain.Entities.User

@{
    ViewData["Title"] = "ثبت نام کاربران";
}

<h2>Register</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CI_RoleId" class="control-label"></label>
                <select asp-for="CI_RoleId" class ="form-control" asp-items="ViewBag.CI_RoleId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت نام" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
